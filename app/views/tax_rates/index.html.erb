<div class="row">
  <div class="small-10 small-centered large-6 large-uncentered columns">

    <p class="large-text">Add Tax Rate</p>

    <%= form_for @tax_rate do |f| %>
      <%= f.label :county %>
      <%= f.text_field :county %>
      <%= f.label :rate %>
      <%= f. text_field :rate %>
      <%= f.submit "Add", class: 'button small radius secondary' %>
    <% end %>

    <p class="large-text">Tax Rate Index</p>

    <table class="table-width-100">
      <thead>
        <tr>
          <th>
          </th>
        </tr>
      </thead>
    </tbody>
      <% @tax_rates.each do |tax_rate| %>

        <tr>
          <td>
            <%= form_for tax_rate do |f| %>
              <%= f.label :county %>
          		<%= f.text_field :county %>
          		<%= f.label :rate %>
              <%= f.text_field :rate %>
              <%= f.label :default_rate %>
          		<%= f.check_box :default_rate %><br/>
              <%= f.submit "Update", class: 'button tiny radius secondary left' %>
            <% end %>
            <%= link_to "Delete", tax_rate, class: 'button tiny radius secondary margin-left-5', method: :delete, data: { confirm: "Are you sure you want to delete this tax rate?" } %>
          </td>
        </tr>

      <% end %>
    </table>

	</div>
</div>