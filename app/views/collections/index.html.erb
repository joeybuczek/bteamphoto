<div class="row">
  <div class="small-10 small-centered large-6 large-uncentered columns">

  	<p class="large-text">Add Collection</p>

  	<%= form_for @collection do |f| %>

      <span>Name:</span>
      <%= f.text_field :name %>
        
      <span>Description:</span>
      <%= f.text_field :description %>

      <span>Genre:</span>
      <%= f.text_field :genre %>

	    <%= f.submit 'Add Collection', class: 'button small radius secondary' %>

    <% end %>

    <p class="large-text">Photo Collections</p>

    <% @collections.each do |collection| %>
    	<p>
	    	<%= link_to collection.name, edit_collection_path(collection) %> 
	    	<%= link_to 'Delete', collection, method: :delete, class: 'label round secondary' %>
    	</p>
    <% end %>  

	</div>
</div>